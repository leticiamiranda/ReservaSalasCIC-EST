= form_for @agenda do |f|
  - if @agenda.errors.any?
    #error_explanation
      %h2= "#{pluralize(@agenda.errors.count, "error")} prohibited this agenda from being saved:"
      %ul
        - @agenda.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nome
    = collection_select(:agenda, :sala_id, Sala.all, :id, :nome)
  .field
    = f.label :data
    = f.datetime_select :data
  .field
    = f.label :disponibilidade
    = f.check_box :disponibilidade
  .actions
  - if can? :create, @agenda
    = f.submit 'Save'

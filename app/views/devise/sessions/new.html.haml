.authform
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f|
    %h3 Entrar
    = devise_error_messages!
    .form-group
      - if devise_mapping.registerable?
        = link_to 'Registrar-se', new_registration_path(resource_name), class: 'right', style: 'background-color:#E8E8E8'
      = f.label :email
      = f.email_field :email, :autofocus => true, class: 'form-control'
    .form-group
      - if devise_mapping.recoverable?
        = link_to "Esqueceu a senha?", new_password_path(resource_name), class: 'right', style: 'background-color:#E8E8E8'
      = f.label :senha
      = f.password_field :password, class: 'form-control'
    = f.submit 'Entrar', class: 'btn btn-primary btn-lg'
    - if devise_mapping.rememberable?
      .checkbox{:style => "width:150px"}
        %label
          = f.check_box :remember_me
          Lembrar-me

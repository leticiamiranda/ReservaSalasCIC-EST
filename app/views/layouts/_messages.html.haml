-# Rails flash messages styled for Bootstrap 4.0
- flash.each do |name, msg|
  - if msg.is_a?(String)
    %div{:class => "alert alert-#{name.to_s == 'notice' ? 'success' : 'danger'}", :role  => "alert"}
      - if name.to_s == 'notice'
        %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
        %span.glyphicon.glyphicon-check
        = content_tag :span, msg, :id => "flash_#{name}", style: 'font-size: 15px; margin-left: 10px'
      - else
        %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
        %span.glyphicon.glyphicon-exclamation-sign
        = content_tag :span, msg, :id => "flash_#{name}", style: 'font-size: 15px; margin-left: 10px'
        - if msg.to_s == 'Antes de continuar, confirme a sua conta.'
          = link_to "Não recebeu email de confirmação?", new_confirmation_path(resource_name), style: "color:#a94442"
          


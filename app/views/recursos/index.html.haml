.container
%div{:class => "panel-group", :style => "margin-left:-0.35cm"}
    %div{:class => "panel panel-primary"}
        %div{:class => "panel-heading"} 
            Recursos
        %div{:class => "panel-body"}
        - if @recursos.empty?
            %center Nenhum recurso cadastrado
        - else
        %table{:class => "table table-striped table-list table-hover"}
            %thead
                %tr
                    %th Sala
                    %th Nome
                    %th Quantidade
                    %th
                    %th
                    %th
            %tbody
                - @recursos.each do |recurso|
                    %tr
                        %td= recurso.sala.nome
                        %td= recurso.nome
                        %td= recurso.qtd
                        %td= link_to 'Detalhes', recurso
                        %td= link_to 'Editar', edit_recurso_path(recurso)
                        %td= link_to 'Remover', recurso, :method => :delete, :data => { :confirm => 'Você tem certeza que deseja remover esse recurso?' }

%br

= link_to 'Cadastrar recurso', new_recurso_path
    %div{:class => "panel-group", :style => "margin-left:-0.35cm"}
        %div{:class => "panel panel-primary"}
            %div{:class => "panel-heading"} 
                Próximas Reservas
            %div{:class => "panel-body"}
                - if(!current_user.nil?)
                    = form_tag reservas_path, :id => "minhas_reservas_form", :method => :get do
                        = check_box_tag "minhas_reservas", 1, !@minhas_reservas_filter_chckd.nil?
                        = label_tag "minhas_reservas", 'Minhas Reservas'
                        = submit_tag 'Filtrar', id: "minhas_reservas_submit", class: 'btn btn-default pull-right'
                %table{:class => "table table-striped table-list table-hover", :name => 'reservas'}
                    %thead
                        %th Sala
                        %th Autor da Reserva
                        %th Data/Hora da Reserva
                        %th Link da Reserva no Google Calendar
                    %tbody
                        - @reservas.each do |reserva|
                            %tr
                                %td= reserva.location
                                - descricao = /Reserva para: (.*)$/.match(reserva.description)
                                - if (!descricao.nil?)
                                    %td= descricao[1]
                                - else
                                    %td= ''
                                %end
                                %td #{reserva.start.date_time.strftime("%d/%m/%Y às %H:%M")} a #{reserva.end.date_time.strftime("%d/%m/%Y às %H:%M")}
                                %td= link_to('Ver reserva no Google Calendar',reserva.html_link)
                        %end


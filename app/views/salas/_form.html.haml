= form_for @sala do |f|
  - if @sala.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sala.errors.count, "error")} prohibited this sala from being saved:"
      %ul
        - @sala.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nome
    = f.text_field :nome
  .field
    = f.label :qtd_lugares
    = f.number_field :qtd_lugares
  .field
    = f.label :disponivel
    = f.text_field :disponivel
  .actions
    = f.submit 'Save'

.container
    %div{:class => "panel-group", :style => "margin-left:-0.35cm"}
        %div{:class => "panel panel-primary"}
            %div{:class => "panel-heading"} 
                .row
                    .col.col-xs-6
                        %h3.panel-title Salas
                    .col.col-xs-6.text-right
                        = button_to new_sala_path, {:method => :get, class: 'btn btn-sm btn-default', :type => "button"} do
                            %span{:class => 'glyphicon glyphicon-plus'}
                            Criar nova
            %div{:class => "panel-body"}
                %table{:class => "table table-striped table-list table-hover", :name => 'salas'}
                    %thead
                        %th Nome 
                        %th Quantidade de lugares
                        %th Disponível
                    %tbody
                        - @salas.each do |sala|
                            %tr
                                %td= sala.nome
                                %td= sala.qtd_lugares
                                %td= sala.disponivel
                        %end




